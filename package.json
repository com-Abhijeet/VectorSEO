{
  "name": "vector-seo-app",
  "version": "0.0.1",
  "private": true,
  "description": "An AI-powered SEO Audit Tool by Abhijeet Shinde",
  "author": "Abhijeet Shinde",
  "main": "main.js",
  "scripts": {
    "//--- BUILDING & PACKAGING ---//": "",
    "build:backend": "npm run build --workspace=packages/backend",
    "build:frontend": "npm run build --workspace=packages/frontend",
    "build:all": "npm run build:backend && npm run build:frontend",
    "build": "npm run build:all && electron-builder",
    "package": "npm run build -- --publish always",
    
    "//--- DEVELOPMENT ---//": "",
    "start": "cross-env NODE_ENV=production electron .",
    "predev": "npm run build:backend",
    "dev": "concurrently \"npm:dev:frontend\" \"npm:dev:electron\"",
    "dev:electron": "cross-env NODE_ENV=development electron .",
    "dev:frontend": "npm run dev --workspace=packages/frontend"
  },
  "workspaces": [
    "packages/*"
  ],
  "devDependencies": {
    "concurrently": "^9.2.1",
    "cross-env": "^10.0.0",
    "electron": "^31.0.2",
    "electron-builder": "^24.13.3",
    "electron-reloader": "^1.2.3"
  },
  "dependencies": {
    "axios": "^1.7.2",
    "boxen": "^7.1.1",
    "chalk": "^5.3.0",
    "cheerio": "^1.0.0-rc.12",
    "commander": "^12.1.0",
    "dotenv": "^16.4.5",
    "electron-log": "^5.4.3",
    "electron-updater": "^6.6.2",
    "figlet": "^1.7.0",
    "handlebars": "^4.7.8",
    "nodemailer": "^6.9.14",
    "ora": "^8.0.1",
    "puppeteer": "^22.15.0",
    "rimraf": "^5.0.7"
  },
  "build": {
    "appId": "com.vectorseo.app",
    "productName": "VectorSEO",

    "win": {
    "target": "nsis",
    "icon": "build/icon.ico" 
    },
    "mac": {
      "target": "dmg",
      "icon": "build/icon.icns"
    },
    
    "files": [
      "main.js",
      "preload.js",
      "updater.js",
      "packages/backend/dist/**/*",
      "packages/backend/package.json",
      "packages/frontend/dist/**/*"
    ],
    "asarUnpack": [
      "packages/backend/dist/**/*",
      "**/node_modules/puppeteer/**/*"
    ],
    "directories": {
      "output": "dist"
    },
    "publish": {
      "provider": "github",
      "owner": "com-Abhijeet",
      "repo": "VectorSEO"
    }
  }
}